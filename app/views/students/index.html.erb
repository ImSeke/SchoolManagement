<h1>Students</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Group</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td> <%= link_to "#{student.name}", student_path(student) %> </td>
                <td> <%= student.group.name %> </td>
                <td> <%= student.email %> </td>
            </tr>
        <% end %>
    </tbody>
</table>