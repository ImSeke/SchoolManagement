<%= render 'shared/errors_html', obj: @lesson %>
<%= form_for(@lesson, :html => { role: "form" }) do |f| %>
    <div class="form-group">
        <%= f.label :teacher, class:"form-label" %>
        <%= f.collection_select :teacher_id, Teacher.order(:id), :id, :name %>
    </div>

    <div class="form-group">
        <%= f.label :day, class:"form-label" %>
        <%= f.text_field :day, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :hour, class:"form-label" %>
        <%= f.time_field :hour, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :location, class:"form-label" %>
        <%= f.text_field :location, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :group, class:"form-label" %>
        <%= f.collection_select :group_id, Group.order(:id), :id, :name %>
    </div>

    <div class="form-group">
        <%= f.label :course, class:"form-label" %>
        <%= f.collection_select :course_id, Course.order(:id), :id, :name %>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
<% end %>